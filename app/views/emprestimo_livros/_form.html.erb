<%= form_for @emprestimo_livro, :html => { :class => "form-horizontal emprestimo_livro" } do |f| %>

  <% if @emprestimo_livro.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@emprestimo_livro.errors.count, "error") %> prohibited this emprestimo_livro from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @emprestimo_livro.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :usuario_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= collection_select(:emprestimo_livro,:usuario_id, Usuario.all,:id,:cod_institucional)%>
    </div>
    <%=f.error_span(:usuario_id) %>
  </div>
  <div class="form-group">
    <%= f.label :livro_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= collection_select(:emprestimo_livro,:livro_id, Livro.all,:id,:nome)%>
    </div>
    <%=f.error_span(:livro_id) %>
  </div>
  <div class="form-group">
    <%= f.label :dia, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :dia %>
    </div>
    <%=f.error_span(:dia) %>
  </div>
  <div class="form-group">
    <%= f.label :devolucao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :devolucao %>
    </div>
    <%=f.error_span(:devolucao) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :status, ['ABERTA', 'FECHADA']%>
    </div>
    <%=f.error_span(:status) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                emprestimo_livros_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
