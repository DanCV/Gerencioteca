<%- model_class = EmprestimoLivro -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:usuario_id) %>:</strong></dt>
  <dd><%= @emprestimo_livro.usuario_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:livro_id) %>:</strong></dt>
  <dd><%= @emprestimo_livro.livro_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dia) %>:</strong></dt>
  <dd><%= @emprestimo_livro.dia %></dd>
  <dt><strong><%= model_class.human_attribute_name(:devolucao) %>:</strong></dt>
  <dd><%= @emprestimo_livro.devolucao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @emprestimo_livro.status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              emprestimo_livros_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_emprestimo_livro_path(@emprestimo_livro), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              emprestimo_livro_path(@emprestimo_livro),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
