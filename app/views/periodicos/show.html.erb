<%- model_class = Periodico -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @periodico.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:edicao) %>:</strong></dt>
  <dd><%= @periodico.edicao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @periodico.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:periocidade) %>:</strong></dt>
  <dd><%= @periodico.periocidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_exemplares) %>:</strong></dt>
  <dd><%= @periodico.num_exemplares %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tempo_emprestimo) %>:</strong></dt>
  <dd><%= @periodico.tempo_emprestimo %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              periodicos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_periodico_path(@periodico), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              periodico_path(@periodico),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
