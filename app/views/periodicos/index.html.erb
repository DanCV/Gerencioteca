<p id="notice"><%= notice %></p>

<%= search_form_for @q do |f| %>
  <%= f.label :nome_cont %>
  <%= f.search_field :nome_cont %>
  <%= f.submit %>
<% end %>

<h1>Periodicos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Edicao</th>
      <th>Descricao</th>
      <th>Periocidade</th>
      <th>Num exemplares</th>
      <th>Tempo emprestimo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periodicos.each do |periodico| %>
      <tr>
        <td><%= periodico.nome %></td>
        <td><%= periodico.edicao %></td>
        <td><%= periodico.descricao %></td>
        <td><%= periodico.periocidade %></td>
        <td><%= periodico.num_exemplares %></td>
        <td><%= periodico.tempo_emprestimo %></td>
        <td><%= link_to 'Show', periodico %></td>
        <td><%= link_to 'Edit', edit_periodico_path(periodico) %></td>
        <td><%= link_to 'Destroy', periodico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Periodico', new_periodico_path %>
