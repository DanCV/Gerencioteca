<%= form_for @periodico, :html => { :class => "form-horizontal periodico" } do |f| %>

  <% if @periodico.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@periodico.errors.count, "error") %> prohibited this periodico from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @periodico.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :edicao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :edicao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:edicao) %>
  </div>
  <div class="form-group">
    <%= f.label :descricao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :descricao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:descricao) %>
  </div>
  <div class="form-group">
    <%= f.label :periocidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :periocidade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:periocidade) %>
  </div>
  <div class="form-group">
    <%= f.label :num_exemplares, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :num_exemplares, :class => 'form-control' %>
    </div>
    <%=f.error_span(:num_exemplares) %>
  </div>
  <div class="form-group">
    <%= f.label :tempo_emprestimo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tempo_emprestimo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tempo_emprestimo) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                periodicos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
