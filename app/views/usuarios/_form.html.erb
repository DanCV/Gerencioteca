<%= form_for @usuario, :html => { :class => "form-horizontal usuario" } do |f| %>

  <% if @usuario.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @usuario.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :cod_institucional, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cod_institucional, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cod_institucional) %>
  </div>
  <div class="form-group">
    <%= f.label :profissao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :profissao, ['Aluno', 'Professor']%>
    </div>
    <%=f.error_span(:profissao) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                usuarios_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
