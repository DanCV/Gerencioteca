<p id="notice"><%= notice %></p>

<%= search_form_for @q do |f| %>
  <%= f.label :nome_cont %>
  <%= f.search_field :nome_cont %>
  <%= f.submit %>
<% end %>

<h1>Livros</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Autor</th>
      <th>Editora</th>
      <th>Edicao</th>
      <th>Descricao</th>
      <th>Num exemplares</th>
      <th>Tempo emprestimo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @livros.each do |livro| %>
      <tr>
        <td><%= livro.nome %></td>
        <td><%= livro.autor %></td>
        <td><%= livro.editora %></td>
        <td><%= livro.edicao %></td>
        <td><%= livro.descricao %></td>
        <td><%= livro.num_exemplares %></td>
        <td><%= livro.tempo_emprestimo %></td>
        <td><%= link_to 'Show', livro %></td>
        <td><%= link_to 'Edit', edit_livro_path(livro) %></td>
        <td><%= link_to 'Destroy', livro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Livro', new_livro_path %>
