<%= form_for @livro, :html => { :class => "form-horizontal livro" } do |f| %>

  <% if @livro.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@livro.errors.count, "error") %> prohibited this livro from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @livro.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :autor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :autor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:autor) %>
  </div>
  <div class="form-group">
    <%= f.label :editora, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :editora, :class => 'form-control' %>
    </div>
    <%=f.error_span(:editora) %>
  </div>
  <div class="form-group">
    <%= f.label :edicao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :edicao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:edicao) %>
  </div>
  <div class="form-group">
    <%= f.label :descricao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :descricao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:descricao) %>
  </div>
  <div class="form-group">
    <%= f.label :num_exemplares, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :num_exemplares, :class => 'form-control' %>
    </div>
    <%=f.error_span(:num_exemplares) %>
  </div>
  <div class="form-group">
    <%= f.label :tempo_emprestimo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tempo_emprestimo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tempo_emprestimo) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :status, ['PRATELEIRA', 'EMPRESTADO']%>
    </div>
    <%=f.error_span(:status) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                livros_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
